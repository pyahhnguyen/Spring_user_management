<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.jwat_g.mapper.UserMapperDb">

    <resultMap id="UserResultMap" type="com.example.jwat_g.model.User">
        <id property="id" column="id"/>
        <result property="username" column="user_name"/>
        <result property="email" column="email"/>
        <result property="fullName" column="full_name"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="getAllUser" resultMap="UserResultMap">
        SELECT * FROM users ORDER BY id DESC
    </select>

    <select id="getUserById" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO users (username, email, full_name, phone_number, status, created_at)
        VALUES (
                   #{username},
                   #{email},
                   #{fullName},
                   #{phoneNumber},
                   #{status},
                   CURRENT_TIMESTAMP
               )
    </insert>

    <!--    patch-->
    <update id="updateUser">
        UPDATE users
        <set>
            <if test="fullName != null">full_name = #{fullName},</if>
            <if test="phoneNumber != null">phone_number = #{phoneNumber},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteUser">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <select id="isUsernameExist" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM users WHERE username = #{username})
    </select>

    <select id="isEmailExist" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM users WHERE email = #{email})
    </select>

</mapper>